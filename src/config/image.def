Bootstrap: docker
From: nvidia/cuda:12.1.1-base-ubuntu22.04

%files
    ./dataset_handler /exec/
    ./evaluator /exec/
    ./trainers /exec/
    ./utils /exec/
    ./main.py /exec/
    ./requirements.txt /exec/

%environment
    export LC_ALL=C    
    export PATH=/opt/conda/bin:${PATH}
    export PATH=/exec:${PATH}

%post
    export LC_ALL=C    
    export DEBIAN_FRONTEND=noninteractive

    apt update -y 
    apt install -y wget
    apt install -y sudo
    apt install -y bzip2

    # install Miniconda
    wget https://repo.anaconda.com/miniconda/Miniconda3-4.6.14-Linux-x86_64.sh -O Miniconda.sh
    /bin/bash Miniconda.sh -b -p /opt/conda
    rm Miniconda.sh
    export PATH=/opt/conda/bin:${PATH}

    conda update python
    conda install conda=24.3.0
    conda install -y numpy 
    conda install -y pandas
    conda install -y Pillow 
    conda install -y numba cudatoolkit
    conda install -y -c huggingface transformers
    conda install -y -c huggingface -c conda-forge datasets
    conda install -y pytorch torchvision torchaudio pytorch-cuda=12.1 -c pytorch -c nvidia

    conda install pip
    pip install -r /exec/requirements.txt

    chmod a+rx /exec/*.py
    export PATH=/exec:${PATH}

%runscript
    echo "Usage: "
    echo "  apptainer exec image.sif python main.py"

%test
    echo "Files" 
    ls -lr /exec/*

%labels
    Author      as1767 (at) student (dot) uni (dash) lj (dot) si
    Container   Transformer training on GPU
    Version     1.0
    Description Natural language processing course

%help
    For details run:
        ./image.sif
