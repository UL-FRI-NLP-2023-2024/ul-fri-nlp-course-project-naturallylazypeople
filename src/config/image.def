Bootstrap: docker
From: python:3.11-bookworm

%files
    ./dataset_handler /exec/
    ./evaluator /exec/
    ./trainers /exec/
    ./utils /exec/
    ./main.py /exec/
    ./requirements.txt /exec/

%environment
    export LC_ALL=C    
    export PATH=/exec:${PATH}

%post
    export LC_ALL=C    
    export DEBIAN_FRONTEND=noninteractive

    apt update -y 
    apt -y install build-essential
    apt -y install libtbb-dev
    python3.11 -m ensurepip --upgrade
    python3.11 -m pip install -r /exec/requirements.txt

    chmod a+rx /exec/*.py
    export PATH=/exec:${PATH}

%runscript
    echo "Usage: "
    echo "  apptainer exec image.sif python main.py"

%test
    echo "Files" 
    ls -lr /exec/*

%labels
    Author      as1767 (at) student (dot) uni (dash) lj (dot) si
    Container   Transformer training on GPU
    Version     1.0
    Description Natural language processing course

%help
    For details run:
        ./image.sif
